<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Nuevo libro</h1>

            <hr>

            <form action="/libros/crear" method="POST">
                <div class="mb-3">
                    <label for="tit" class="form-label">Título</label>
                    <input type="text" class="form-control" id="tit" name="title">
                </div>

                <div class="mb-3">
                    <label for="aut" class="form-label">Autor</label>
                    <input type="text" class="form-control" id="aut" name="author">
                </div>

                <div class="mb-3">
                    <label for="desc" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="desc" name="description">
                </div>

                <div class="mb-3">
                    <label for="rat" class="form-label">Puntuación</label>
                    <input type="text" class="form-control" id="rat" name="rating">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Crear libro</button>
                </div>
            </form>

        </div>
    </div>
</div>